<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.heinunez.iot</groupId>
  <artifactId>iot-pipeline</artifactId>
  <packaging>jar</packaging>
  <parent>
    <groupId>com.heinunez</groupId>
    <artifactId>learning-kafka</artifactId>
    <version>0.0.1</version>
    <relativePath>../../pom.xml</relativePath>
  </parent>
  <dependencies>
    <dependency>
      <groupId>com.heinunez.kafka</groupId>
      <artifactId>kafka-commons</artifactId>
      <version>0.0.1</version>
    </dependency>
    <dependency>
      <groupId>org.apache.avro</groupId>
      <artifactId>avro</artifactId>
    </dependency>
    <dependency>
      <groupId>io.confluent</groupId>
      <artifactId>kafka-avro-serializer</artifactId>
    </dependency>
    <dependency>
      <groupId>org.apache.kafka</groupId>
      <artifactId>kafka-streams</artifactId>
    </dependency>
    <dependency>
      <groupId>io.confluent</groupId>
      <artifactId>kafka-streams-avro-serde</artifactId>
    </dependency>
    <dependency>
      <groupId>com.opencsv</groupId>
      <artifactId>opencsv</artifactId>
    </dependency>
    <dependency>
      <groupId>org.apache.logging.log4j</groupId>
      <artifactId>log4j-api</artifactId>
    </dependency>
    <dependency>
      <groupId>org.apache.logging.log4j</groupId>
      <artifactId>log4j-core</artifactId>
    </dependency>
    <dependency>
      <groupId>org.apache.logging.log4j</groupId>
      <artifactId>log4j-slf4j2-impl</artifactId>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>io.confluent</groupId>
        <artifactId>kafka-schema-registry-maven-plugin</artifactId>
        <configuration combine.children="append">
          <subjects>
            <sensor-data-value>src/main/avro/sensor-data.avsc</sensor-data-value>
            <sensor-aggregate-value>src/main/avro/sensor-aggregate.avsc</sensor-aggregate-value>
          </subjects>
          <schemaTypes>
            <sensor-data-value>AVRO</sensor-data-value>
            <sensor-aggregate-value>AVRO</sensor-aggregate-value>
          </schemaTypes>
        </configuration>
        <goals>
          <goal>register</goal>
        </goals>
      </plugin>
      <plugin>
        <groupId>org.apache.avro</groupId>
        <artifactId>avro-maven-plugin</artifactId>
        <configuration>
          <sourceDirectory>${project.basedir}/src/main/avro/</sourceDirectory>
        </configuration>
        <executions>
          <execution>
            <phase>generate-sources</phase>
            <goals>
              <goal>schema</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>producer</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>com.heinunez.iot.producer.SensorDataProducer</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>stream</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>com.heinunez.iot.stream.SensorDataStream</mainClass>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
